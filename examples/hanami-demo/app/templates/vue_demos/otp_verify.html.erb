<div class="mx-auto max-w-md">
  <div class="mb-6">
    <h2 class="text-2xl font-bold text-gray-900 dark:text-white">Two-Factor Verification</h2>
    <p class="mt-2 text-sm text-gray-600 dark:text-gray-400">
      This page demonstrates the OTPVerify Vue component for MFA login verification.
    </p>
  </div>

  <!-- Vue component mount point -->
  <div
    id="otp-verify-app"
    data-show-timer="true"
    data-redirect-url="<%= @redirect_url || '/dashboard' %>"
  ></div>

  <div class="mt-6 rounded-lg bg-yellow-50 p-4 dark:bg-yellow-900/20">
    <h3 class="text-sm font-medium text-yellow-800 dark:text-yellow-200">Verification Options</h3>
    <ul class="mt-2 list-inside list-disc text-sm text-yellow-700 dark:text-yellow-300">
      <li>Enter the 6-digit code from your authenticator app</li>
      <li>Or use one of your recovery codes if you don't have access to your authenticator</li>
      <li>Codes refresh every 30 seconds</li>
    </ul>
  </div>
</div>
