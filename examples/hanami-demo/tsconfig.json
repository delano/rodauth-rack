{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Path aliases */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./app/assets/js/*"],
      "@components/*": ["./app/assets/js/components/*"],
      "@composables/*": ["./app/assets/js/composables/*"],
      "@types/*": ["./app/assets/js/types/*"],
      "@utils/*": ["./app/assets/js/utils/*"]
    }
  },
  "include": [
    "app/assets/js/**/*.ts",
    "app/assets/js/**/*.d.ts",
    "app/assets/js/**/*.tsx",
    "app/assets/js/**/*.vue"
  ]
}
